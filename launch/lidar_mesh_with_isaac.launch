<?xml version="1.0"?>
<launch>
  <!-- ================================================================ -->
  <!-- HSR Navigation with Isaac Sim - MINIMAL VERSION                  -->
  <!-- All parameters are set in Python code (easier to modify)         -->
  <!-- ================================================================ -->

  <!-- Set use_sim_time for Isaac Sim -->
  <param name="use_sim_time" value="true" />

  <!-- ============================================ -->
  <!-- 1. LiDAR Activator -->
  <!-- ============================================ -->
  <node name="lidar_activator" 
        pkg="csc752-final-project" 
        type="lidar_activator.py" 
        output="screen" />

  <!-- ============================================ -->
  <!-- 2. Plane Detector (RANSAC) -->
  <!-- ============================================ -->
  <node name="point_cloud_plane_detector" 
        pkg="csc752-final-project" 
        type="point_cloud_to_mesh.py" 
        output="screen" />

  <!-- ============================================ -->
  <!-- 3. RViz Visualization -->
  <!-- ============================================ -->
  <node name="rviz" 
        pkg="rviz" 
        type="rviz" 
        args="-d $(find csc752-final-project)/rviz/lidar_mesh_visualization.rviz" 
        output="screen" />

</launch>